<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Style Texts -->
    <style name="TitleSansSerif_white_32sp" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_32sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TitleSansSerif_white_18sp" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_18sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="TitleSansSerif_gray_32sp" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray_6e</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_32sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Style Buttons -->
    <style name="Button.SilverLight" parent="ThemeOverlay.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/background_silver_light_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingStart">@dimen/margin_16dp</item>
        <item name="android:paddingEnd">@dimen/margin_16dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_8dp</item>
    </style>
</resources>